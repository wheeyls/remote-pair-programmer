{
  "name": "github_ai_actions",
  "version": "1.0.0",
  "description": "GitHub Actions bot that uses AI to respond to pull requests and comments",
  "main": "src/handler.js",
  "scripts": {
    "worker": "node worker.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "start": "node src/handler.js"
  },
  "keywords": [
    "github-actions",
    "ai",
    "pull-requests",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.40.0",
    "@octokit/rest": "^21.1.1",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "node-fetch": "^3.3.2",
    "openai": "^4.0.0",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
